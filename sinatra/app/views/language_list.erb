<div class="table-responsive">
  <table class="table table-hover table-light caption-top">
    <caption>List of languages in POEditor</caption>
    <thead class="table-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Language name</th>
        <th scope="col">Code</th>
        <th scope="col">Stats</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @language_list.each_with_index do |lang_details, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <th scope="row"><%= lang_details['name'] %></th>
          <td><%= lang_details['code'] %></td>
          <td>
            <span class="badge bg-primary"><%= lang_details['translations'] %> translations</span>
            <span class="badge bg-success"><%= lang_details['percentage'] %>% completed</span>
          </td>
          <td>
            <a href="/download?code=<%=lang_details['code']%>" class="btn btn-outline-primary">Download</a>
            <a href="/view_file?code=<%=lang_details['code']%>" class="btn btn-outline-primary" target="_blank">View</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function(){
    $('#languageList').parent().find('.active').removeClass('active');
    $('#languageList').addClass('active');
  })
</script>
